<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textViewP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="@string/profileInfo"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="16dp" />

    <ProgressBar
        android:id="@+id/progressBarP"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp" />

    <EditText
        android:id="@+id/editTextP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="284dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name" />

    <EditText
        android:id="@+id/editTextTelegram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextP"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="334dp"
        android:ems="10"
        android:hint="TelegramID"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonSaveP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:text="Save Changes" />


    <ImageView
        android:id="@+id/imageViewP"
        android:layout_width="212dp"
        android:layout_height="190dp"
        android:layout_alignStart="@+id/buttonSaveP"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-42dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/textViewVeri"
        android:layout_width="215dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/editTextP"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="130dp"
        android:text="Verification"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButtonLog"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewP"
        android:layout_marginStart="33dp"
        android:layout_marginTop="-54dp"
        android:layout_toEndOf="@+id/editTextP"
        app:srcCompat="@android:drawable/ic_lock_idle_lock" />

    <TextView
        android:id="@+id/textViewNotify"
        android:layout_width="211dp"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/imageViewP"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:text="Notifications"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</RelativeLayout>